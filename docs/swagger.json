            "delete": {
                "description": "Allows an admin user to delete a newsletter",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "newsletters"
                ],
                "summary": "Delete a newsletter",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID of the newsletter to delete",
